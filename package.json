{
  "name": "loves-me-loves-me-not",
  "displayName": "Loves Me, Loves Me Not",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "description": "A beautiful, production-ready daisy petal plucking game built with React Native and Expo. Experience the timeless romantic tradition with smooth animations and delightful interactions.",
  "keywords": [
    "react-native",
    "expo",
    "game",
    "romance",
    "love",
    "daisy",
    "petals",
    "animation",
    "mobile-app",
    "cross-platform"
  ],
  "author": {
    "name": "Ritu Sangha",
    "email": "rsangha@gmail.com",
    "url": "https://ritusbooks.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/loves-me-loves-me-not.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/loves-me-loves-me-not/issues"
  },
  "homepage": "https://github.com/yourusername/loves-me-loves-me-not#readme",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start web": "webpack serve --config webpack.config.js",
    "dev": "expo start",
    "build": "expo export",
    "build:android": "eas build --platform android --profile production",
    "build:android:preview": "eas build --platform android --profile preview",
    "build:android:local": "expo run:android",
    "build:ios": "eas build --platform ios --profile production",
    "build:ios:preview": "eas build --platform ios --profile preview",
    "build:ios:local": "expo run:ios",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "type-check": "tsc --noEmit",
    "create-archive": "node scripts/create-archive.js",
    "clear-cache": "expo start --clear",
    "doctor": "expo doctor",
    "install:clean": "rm -rf node_modules && npm install",
    "prebuild:android": "expo prebuild --platform android --clean",
    "prebuild:ios": "expo prebuild --platform ios --clean",
    "pkg:edit": "node scripts/edit-package.js edit",
    "pkg:protect": "node scripts/edit-package.js protect",
    "pkg:view": "node scripts/edit-package.js view",
    "pkg:backup": "node scripts/edit-package.js backup",
    "pkg:restore": "node scripts/edit-package.js restore",
    "pkg:monitor": "node scripts/monitor-package.js monitor",
    "pkg:validate": "node scripts/monitor-package.js validate",
    "pkg:fix": "node scripts/monitor-package.js restore"
  },
  "resolutions": {
    "@react-native/gradle-plugin": "0.74.1"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "app/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "hooks/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "dependencies": {
    "@expo-google-fonts/dancing-script": "^0.2.3",
    "@expo-google-fonts/poppins": "^0.2.3",
    "@expo/vector-icons": "^14.0.4",
    "adm-zip": "^0.5.16",
    "expo": "~53.0.0",
    "expo-build-properties": "~0.13.0",
    "expo-camera": "~16.0.8",
    "expo-constants": "~17.0.3",
    "expo-font": "~13.0.1",
    "expo-haptics": "~14.0.1",
    "expo-linear-gradient": "~14.0.1",
    "expo-linking": "~7.0.3",
    "expo-modules-autolinking": "^2.1.13",
    "expo-router": "~4.0.17",
    "expo-splash-screen": "~0.29.16",
    "expo-status-bar": "~1.9.0",
    "expo-system-ui": "~4.0.4",
    "expo-web-browser": "~14.0.1",
    "lucide-react-native": "^0.468.0",
    "react": "18.3.1",
    "react-native": "0.74.6",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-svg": "15.8.0",
    "react-native-web": "~0.19.13",
    "vite": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native/gradle-plugin": "0.74.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-native": "^0.72.8",
    "@types/react-test-renderer": "^18.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "jest": "^29.2.1",
    "jest-expo": "~53.0.0",
    "metro": "^0.82.4",
    "metro-config": "^0.82.4",
    "metro-core": "^0.82.4",
    "metro-react-native-babel-transformer": "^0.77.0",
    "react-dom": "^18.3.1",
    "react-test-renderer": "18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "private": true
}
